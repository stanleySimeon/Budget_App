<div class="alert w-full fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 flex flex-col px-3 py-2 justify-center items-center container-fluid bg-transparent transition-opacity duration-1000 ease-out" role="alert">
  <div class="card w-full bg-bdgt-white_bg h-auto py-2 px-4 border border-bdgt-danger shadow-sm rounded-lg">
    <div class="alert flex flex-col w-full flex-wrap justify-center items-center mb-4 pt-4">
      <%= image_tag "error.svg", alt: 'complete check', class: "w-16 h-16 rounded-full mb-2" %>
      <span class="block text-center"><%= alert %></span>
    </div>
  </div>
</div>

<%= javascript_include_tag "application", async: true %>

<script>
  setTimeout(function() {
    document.querySelector('.alert').style.display = 'none';
  }, 6000);
</script>
