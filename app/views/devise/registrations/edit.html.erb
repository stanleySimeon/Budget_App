<div class="container px-3 py-4">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="flex flex-col space-y-3">
      <%= f.file_field :icon, class: "field w-full py-2 px-1 bg-transparent border-b border-bdgt" %>
      <%= f.text_field :name, autofocus: true, placeholder: "Name", autocomplete: "name", autofocus: true, class: "field w-full py-2 px-1 bg-transparent border-b border-bdgt" %>
      <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", autofocus: true, class: "field w-full py-2 px-1 bg-transparent border-b border-bdgt" %>
      <%= f.password_field :password, autofocus: true, placeholder: "New Password (min 6 chars)", autocomplete: "off", class: "field w-full py-2 px-1 bg-transparent border-b border-bdgt" %>
      <%= f.password_field :password_confirmation, autofocus: true, placeholder: "Confirm New Password", autocomplete: "off", class: "field w-full py-2 px-1 bg-transparent border-b border-bdgt" %>
      <%= f.password_field :current_password, autofocus: true, placeholder: "Current Password (Required)", autocomplete: "on", class: "field w-full py-2 px-1 bg-transparent border-b border-bdgt" %>
      <div class="flex justify-between items-center py-4">
        <%= f.submit "Update", class: "bg-bdgt-green w-32 text-bdgt-white py-2 rounded-lg" %>
        <div class="w-32 bg-bdgt-danger text-center text-bdgt-white py-2 rounded-lg">
          <%= link_to "Quit", root_path %>
        </div>
      </div>
    </div>
  <% end %>
  <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "text-bdgt-danger" %>
</div>