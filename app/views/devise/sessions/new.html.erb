<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<header class=" bg-mySpend px-2 h-16 sm:px-4 py-2 sm:py-0 sticky w-full flex justify-center z-20 top-0 left-0">
  <nav class="container flex flex-wrap sm:flex-nowrap justify-between p-0 items-center mx-auto">
    <span><%= link_to image_tag('arrow_left.svg', class:"h-6 w-6 p-0 m-auto"), new_user_registration_path %></span>
    <span class="text-center text-white text-md">LOGIN</span>
    <span>
      <% if user_signed_in? %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'text-white text-center'  %>
      <% else %>
        <%= f.submit "Sign In", class: "text-white text center" %>
      <% end %>
    </span>
  </nav>
</header>
  <div class="container md:w-6/12 md:m-auto p-2 mt-4 shadow-md bg-white">
    <%= f.label :email, class: 'hidden' %>
    <%= f.email_field :email, autofocus: false, placeholder: "Email", class: "field w-full py-2 px-1 mb-3 bg-transparent" %>
    <%= f.label :password, class: 'hidden' %>
    <%= f.password_field :password, placeholder: "Password", class: "field w-full py-2 px-1 bg-transparent" %>
  <div class="container w-full flex justify-center mt-2">
    <%= link_to "Forgot your password?", new_user_password_path, class: "link text-center text-mySpend-Text" %>
  </div>
  </div>
<% end %>
