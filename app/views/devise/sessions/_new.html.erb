<% resource ||= User.new %>
<% resource_name ||= :user %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="w-full flex flex-col space-y-8">
    <h1 class="text-bdgt font-medium text-4xl">Login</span></h1>
    <div>
      <%= f.label :email, class: 'hidden' %>
      <%= f.email_field :email, autofocus: false, placeholder: "Email", class: "field w-full py-2 px-1 mb-3 bg-transparent border-b border-bdgt" %>
      <%= f.label :password, class: 'hidden' %>
      <%= f.password_field :password, placeholder: "Password", class: "field w-full py-2 px-1 bg-transparent border-b border-bdgt" %>
      <div class="flex flex-col space-y-4 pt-4">
        <label class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-2 accent-bdgt-green" %>
          <span class="text-bdgt text-md">Remember me</span>
        </label>
        <%= f.submit "Submit", class: "w-full bg-gradient-to-r from-bdgt-secondary to-bdgt-green text-white text-center py-2 cursor-pointer" %>
      </div>
    </div>
  </div>
<% end %>