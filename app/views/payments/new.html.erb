<%= form_with model:  @payment, url: category_payments_path(@categories) do |f| %>
  <div class="container px-3 pt-12">
    <%= f.text_field :name, placeholder: "Payment name", class: "field w-full py-2 px-1 mb-3 bg-transparent outline outline-offset-0 outline-0", autofocus: true, autocomplete: "off", required: true %>
    <%= f.text_field :amount, placeholder: "Amount", class: "field w-full py-2 px-1 mb-3 bg-transparent", autofocus: true, autocomplete: "off", required: true %>
    <%= f.collection_select :category_id, @categories, :id, :name, {prompt: "Select Category"}, {class: "field w-full py-2 px-1 mb-3 bg-transparent", required: true} %>
    <div class="flex justify-between items-center py-4">
      <%= f.submit "Add Payment", class: "bg-bdgt-green w-32 text-bdgt-white py-2" %>
      <div class="w-32 bg-bdgt-danger text-center text-bdgt-white py-2">
        <%= link_to "CANCEL", root_path %>
      </div>
    </div>
  </div>
<% end %>
